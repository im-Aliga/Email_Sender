@using EmailSender.ViewModels
@model List<ListEmailViewModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@nameof(ListEmailViewModel.From)</th>
            <th scope="col">@nameof(ListEmailViewModel.To)</th>
            <th scope="col">@nameof(ListEmailViewModel.Title)</th>
            <th scope="col">@nameof(ListEmailViewModel.Content)</th>
            <th scope="col">
                <a asp-controller="email" asp-action="add" class="btn btn-primary">Send new Email </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var email in Model)
        {
            <tr>
